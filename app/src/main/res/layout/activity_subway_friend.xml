<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".subway.subway_friend">


    <TextView
            android:text="닉네임 검색"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:id="@+id/search_textview" app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp" android:fontFamily="@font/nanumsquareroundr"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:gravity="center"
            android:layout_marginTop="176dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/search_nick"
            app:layout_constraintStart_toEndOf="@+id/search_textview" android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:hint="닉네임을 입력하세요" app:layout_constraintBaseline_toBaselineOf="@+id/search_textview"
            android:fontFamily="@font/nanumsquareroundr"/>
    <Button
            android:text="검색"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:background="@android:color/holo_orange_light" android:textColor="@color/selected_text_color"
            app:layout_constraintStart_toEndOf="@+id/search_nick" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:fontFamily="@font/nanumsquareroundr" android:textSize="18sp" android:layout_marginTop="176dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="닉네임"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/nick_textview" android:textSize="18sp"
            android:fontFamily="@font/nanumsquareroundr" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="132dp" app:layout_constraintTop_toBottomOf="@+id/search_textview"/>
    <TextView
            android:text="닉네임을 검색하세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nickresult_textview" android:textSize="18sp"
            android:fontFamily="@font/nanumsquareroundr"
            app:layout_constraintStart_toEndOf="@+id/nick_textview"
            android:layout_marginStart="36dp" android:layout_marginLeft="36dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/nick_textview"/>
    <TextView
            android:text="전철역"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subway_textview" android:textSize="18sp"
            android:fontFamily="@font/nanumsquareroundr" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/nick_textview"/>
    <TextView
            android:text="사용자가 입력한 전철역이 나옵니다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subresult_textview" android:textSize="18sp"
            android:fontFamily="@font/nanumsquareroundr"
            app:layout_constraintStart_toEndOf="@+id/subway_textview"
            android:layout_marginStart="36dp" android:layout_marginLeft="36dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/subway_textview"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="top"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_textview" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:text="알고싶은 사용자의 닉네임을 검색하세요!"
            android:fontFamily="@font/nanumsquareroundr" android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent" android:gravity="center"/>
</android.support.constraint.ConstraintLayout>