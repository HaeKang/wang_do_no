<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:background="@android:color/background_light"
>

    <android.support.v7.widget.CardView
            android:layout_width="308dp"
            android:layout_height="450dp"
            android:id="@+id/cardView"
            app:cardCornerRadius="16dp" app:cardElevation="16dp"
            android:layout_marginBottom="124dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background">
            <EditText
                    android:layout_height="58dp"
                    android:layout_width="253dp" android:hint="아이디를 입력하세요"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="35dp" android:layout_marginRight="35dp" android:id="@+id/Id"
                    android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="15dp"
                    android:layout_gravity="center"/>
            <EditText
                    android:layout_width="253dp"
                    android:layout_height="58dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/Pw"
                    android:hint="비밀번호를 입력하세요" android:layout_marginEnd="35dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="35dp" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/Id"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"/>
            <EditText
                    android:layout_width="253dp"
                    android:layout_height="58dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/Nickname"
                    android:hint="닉네임을 입력하세요" android:layout_marginEnd="35dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="35dp" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/Pw"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"/>
            <EditText
                    android:layout_width="253dp"
                    android:layout_height="58dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/Subway_name"
                    android:hint="전철역 선택?" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/Nickname"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"/>
            <Button
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Sign_up_btn"
                    android:text="회원가입"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/Subway_name"
                    android:layout_gravity="center" android:background="@android:color/holo_orange_light"
                    android:textColor="@android:color/background_light"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>