<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bus.FeelBusActivity">

    <Button
            android:text="확인"
            android:fontFamily="@font/nanumsquareroundr"
            android:textSize="25sp"
            android:layout_width="98dp"
            android:layout_height="52dp"
            android:id="@+id/submit"
            android:background="@android:color/holo_orange_light"
            android:textColor="@color/cardview_light_background"
            android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>

    <ImageButton
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/good"
            android:id="@+id/good"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            android:layout_marginLeft="24dp" app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/soso"
            android:id="@+id/soso" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/bad" app:layout_constraintStart_toEndOf="@+id/good"
            android:layout_marginStart="8dp"/>

    <ImageButton
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/bad"
            android:id="@+id/bad" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" android:layout_marginRight="24dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline" app:layout_constraintGuide_end="563dp"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="437dp" android:id="@+id/guideline2"/>
    <TextView
            android:text="어떠신가요?"
            android:fontFamily="@font/nanumsquareroundr"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/soso"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_good" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/good"
            app:layout_constraintStart_toStartOf="@+id/good" app:layout_constraintEnd_toEndOf="@+id/good"
            android:fontFamily="@font/nanumsquareroundr"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_soso" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/soso" app:layout_constraintStart_toStartOf="@+id/soso"
            app:layout_constraintEnd_toEndOf="@+id/soso" android:fontFamily="@font/nanumsquareroundr"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_bad" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bad" app:layout_constraintStart_toStartOf="@+id/bad"
            app:layout_constraintEnd_toEndOf="@+id/bad" app:layout_constraintHorizontal_bias="0.512"
            android:fontFamily="@font/nanumsquareroundr"/>


</android.support.constraint.ConstraintLayout>